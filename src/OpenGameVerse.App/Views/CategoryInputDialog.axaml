<suki:SukiWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:vm="using:OpenGameVerse.App.ViewModels"
                 xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
                 x:Class="OpenGameVerse.App.Views.CategoryInputDialog"
                 x:DataType="vm:CategoryInputDialogViewModel"
                 Title="Create New Category"
                 WindowStartupLocation="CenterOwner"
                 SizeToContent="WidthAndHeight"
                 CanResize="False">
    <suki:SukiMainHost>
        <Border Margin="20"
                CornerRadius="14"
                Padding="20">
            <StackPanel Spacing="16">
                <TextBlock Text="Category Name" FontWeight="SemiBold" FontSize="14" />

                <TextBox Name="CategoryNameBox"
                         Text="{Binding CategoryName}"
                         Watermark="Enter category name..."
                         MinHeight="40" />

                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                    <Button Name="OkButton"
                            Content="OK"
                            Width="90"
                            Command="{Binding OkCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                    <Button Name="CancelButton"
                            Content="Cancel"
                            Width="90"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </suki:SukiMainHost>
</suki:SukiWindow>